{
  "compileOnSave": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "alwaysStrict": true,
    "jsx": "react",
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": false,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationDir": "definitions/",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/"],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
